  ],
  "firestore": {
    "rules": "fellspiral/firestore.rules",
    "indexes": [
      {
        "collectionGroup": "cards",
        "queryScope": "COLLECTION",
        "fields": [
          {
            "fieldPath": "isPublic",
            "order": "ASCENDING"
          },
          {
            "fieldPath": "title",
            "order": "ASCENDING"
          }
        ]
      }
    ]
  },
  "storage": {
    "rules": "shared/storage.rules"
  },
  "emulators": {
    "auth": {
      "host": "127.0.0.1",
      "port": 9099
    },
    "firestore": {
      "host": "127.0.0.1",
      "port": 8081
    },
    "storage": {
      "host": "127.0.0.1",
      "port": 9199
    },
    "ui": {
      "enabled": true,
      "host": "127.0.0.1",
      "port": 4000
    }
  }
}
