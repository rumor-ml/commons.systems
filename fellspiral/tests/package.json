  },
  "devDependencies": {
    "@google-cloud/firestore": "^7.10.0",
    "@playwright/test": "^1.40.0",
    "firebase-admin": "^12.0.0",
    "http-server": "^14.1.1",
    "tsx": "^4.7.0"
  }
}
