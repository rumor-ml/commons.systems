{
  "name": "@commons/fellspiral-tests",
  "version": "1.0.0",
  "description": "Test suite for Fellspiral static site",
  "type": "module",
  "scripts": {
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
