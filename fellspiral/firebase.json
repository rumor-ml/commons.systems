{
  "hosting": {
    "site": "fellspiral",
    "public": "site/dist",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": [
      {
        "collectionGroup": "cards",
        "queryScope": "COLLECTION",
        "fields": [
          {
            "fieldPath": "isPublic",
            "order": "ASCENDING"
          },
          {
            "fieldPath": "title",
            "order": "ASCENDING"
          },
          {
            "fieldPath": "__name__",
            "order": "ASCENDING"
          }
        ]
      }
    ]
  }
}
