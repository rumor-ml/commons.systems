rules_version = '2';

// Firestore security rules for cards collection
// Ensures data integrity and user attribution
// Related: #283 for security rules validation tests
// Related: #305 for general documentation improvements

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user owns the document
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Cards collection (for fellspiral) - includes PR-specific collections like cards_pr_123
    // and branch preview collections like cards_preview_my-branch
    match /{cardsCollection}/{cardId} {
      // Match any collection that starts with "cards" (cards, cards_pr_123, cards_preview_branch-name)
      allow read: if cardsCollection.matches('cards(_pr_[0-9]+)?')
                  || cardsCollection.matches('cards_preview_[a-z0-9-]+');

      // Allow create for authenticated users (only in collections starting with "cards")
      // Cards created will have metadata about who created them
      // NOTE: We don't validate createdAt == request.time on CREATE for pragmatic reasons:
      // 1. While serverTimestamp() sets time on the server, the validation check compares
      //    against request.time, which may differ from the actual timestamp written due to
      //    sentinel value resolution timing
      // 2. The createdAt field is immutable (set once, never modified), so manipulation risk is low
      // 3. User attribution security is enforced via createdBy == request.auth.uid
      // UPDATE operations require lastModifiedAt == request.time to prevent timestamp manipulation.
      // Related: TODO(#305) for deferred timestamp validation work
      allow create: if (cardsCollection.matches('cards(_pr_[0-9]+)?')
                        || cardsCollection.matches('cards_preview_[a-z0-9-]+'))
                    && isAuthenticated()
                    && request.resource.data.keys().hasAll(['title', 'type', 'subtype'])
                    && request.resource.data.createdBy == request.auth.uid;

      // Allow update only if user is the creator
      allow update: if (cardsCollection.matches('cards(_pr_[0-9]+)?')
                        || cardsCollection.matches('cards_preview_[a-z0-9-]+'))
                    && isAuthenticated()
                    && resource.data.createdBy == request.auth.uid
                    // Explicitly require lastModifiedBy field in the update and match auth.uid
                    && 'lastModifiedBy' in request.writeFields
                    && request.resource.data.lastModifiedBy == request.auth.uid
                    // Explicitly require lastModifiedAt field in the update and match request.time
                    && 'lastModifiedAt' in request.writeFields
                    && request.resource.data.lastModifiedAt == request.time
                    // Enforce field immutability
                    && request.resource.data.createdBy == resource.data.createdBy
                    && request.resource.data.createdAt == resource.data.createdAt
                    // Ensure required fields cannot be deleted (must still exist after update)
                    && request.resource.data.keys().hasAll(['title', 'type', 'subtype']);

      // Allow delete only if user is the creator
      allow delete: if (cardsCollection.matches('cards(_pr_[0-9]+)?')
                        || cardsCollection.matches('cards_preview_[a-z0-9-]+'))
                    && isAuthenticated()
                    && resource.data.createdBy == request.auth.uid;
    }

    // User profiles (optional - for storing user preferences)
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && isOwner(userId);
    }

    // Default: deny all access to other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

