rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Cards collection - read access for all, write access restricted
    match /cards/{cardId} {
      // Anyone can read cards
      allow read: if true;

      // Only allow writes from authenticated users
      // In production, you might want to restrict this further to specific users/roles
      allow write: if request.auth != null;

      // Allow creation, update, and deletion
      allow create: if request.auth != null;
      allow update: if request.auth != null;
      allow delete: if request.auth != null;
    }

    // Default: deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
