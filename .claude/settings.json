{
  "sandbox": {
    "enabled": true,
    "autoAllowBashIfSandboxed": true,
    "excludedCommands": ["git", "gh", "gcloud"]
  },
  "permissions": {
    "defaultMode": "plan",
    "allow": [
      "Bash(git log:*)",
      "Bash(git worktree list)",
      "Bash(git worktree add:*)",
      "Bash(gh issue view:*)",
      "Bash(gh run list:*)",
      "Bash(gh run view:*)",
      "Bash(gh workflow list:*)",
      "Bash(cat:*)",
      "Bash(wc:*)",
      "Bash(grep:*)",
      "Bash(done:*)",
      "Bash(echo:*)"
    ]
  }
}
