{
  "model": "opus",
  "sandbox": {
    "enabled": true,
    "autoAllowBashIfSandboxed": true,
    "excludedCommands": [
      "git", 
      "gh", 
      "gcloud", 
      "nix", 
      "go mod tidy"
    ]
  },
  "permissions": {
    "defaultMode": "plan",
    "allow": [
      "Bash(git log:*)",
      "Bash(git fetch:*)",
      "Bash(git rev-parse:*)",
      "Bash(git worktree list)",
      "Bash(git worktree add:*)",
      "Bash(gh issue view:*)",
      "Bash(gh issue list:*)",
      "Bash(gh pr list:*)",
      "Bash(gh pr view:*)",
      "Bash(gh pr checks:*)",
      "Bash(gh run list:*)",
      "Bash(gh run view:*)",
      "Bash(gh run watch:*)",
      "Bash(gh workflow list:*)",
      "Bash(nix flake check:*)",
      "Bash(tmux show-hooks:*)",
      "Bash(tmux show-options:*)",
      "Bash(tmux list-hooks:*)",
      "Bash(tmux show-hook:*)",
      "Bash(tmux list-panes:*)",
      "Bash(tmux list-windows:*)",
      "Bash(tmux capture-pane:*)",
      "Bash(tmux display-message:*)",
      "Bash(make build:*)",
      "Bash(make test:*)",
      "Bash(go mod tidy:*)",
      "Bash(go test:*)",
      "Bash(go build:*)",
      "Bash(npx tsc:*)",
      "Bash(npx playwright test:*)",
      "Bash(gcloud artifacts repositories list:*)",
      "Bash(gcloud artifacts docker images list:*)",
      "Bash(gcloud artifacts docker tags list:*)",
      "Bash(gcloud artifacts packages list:*)",
      "Bash(cat:*)",
      "Bash(wc:*)",
      "Bash(grep:*)",
      "Bash(find:*)",
      "Bash(done:*)",
      "Bash(tree:*)",
      "Bash(sort:*)",
      "Bash(echo:*)"
    ]
  },
  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "CLAUDE_TTY=$(ps -o tty= -p $PPID 2>/dev/null | tr -d ' '); PANE=$(tmux list-panes -a -F '#{pane_id} #{pane_tty}' 2>/dev/null | grep \"/dev/$CLAUDE_TTY\" | awk '{print $1}'); [ -n \"$PANE\" ] && touch \"/tmp/claude/tui-alert-$PANE\"; [ -n \"$CLAUDE_TTY\" ] && printf '\\a' > \"/dev/$CLAUDE_TTY\"; afplay /System/Library/Sounds/Tink.aiff &"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "CLAUDE_TTY=$(ps -o tty= -p $PPID 2>/dev/null | tr -d ' '); PANE=$(tmux list-panes -a -F '#{pane_id} #{pane_tty}' 2>/dev/null | grep \"/dev/$CLAUDE_TTY\" | awk '{print $1}'); [ -n \"$PANE\" ] && rm -f \"/tmp/claude/tui-alert-$PANE\""
          }
        ]
      }
    ]
  }
}
