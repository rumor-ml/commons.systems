{
  "model": "opus",
  "sandbox": {
    "enabled": true,
    "autoAllowBashIfSandboxed": true,
    "excludedCommands": ["git", "gh", "gcloud", "nix"]
  },
  "permissions": {
    "defaultMode": "plan",
    "allow": [
      "Bash(git log:*)",
      "Bash(git fetch:*)",
      "Bash(git rev-parse:*)",
      "Bash(git worktree list)",
      "Bash(git worktree add:*)",
      "Bash(gh issue view:*)",
      "Bash(gh issue list:*)",
      "Bash(gh pr list:*)",
      "Bash(gh pr view:*)",
      "Bash(gh pr checks:*)",
      "Bash(gh run list:*)",
      "Bash(gh run view:*)",
      "Bash(gh run watch:*)",
      "Bash(gh workflow list:*)",
      "Bash(nix flake check:*)",
      "Bash(npx tsc:*)",
      "Bash(npx tsc:*)",
      "Bash(npx playwright test:*)",
      "Bash(gcloud artifacts repositories list:*)",
      "Bash(gcloud artifacts docker images list:*)",
      "Bash(gcloud artifacts docker tags list:*)",
      "Bash(gcloud artifacts packages list:*)",
      "Bash(cat:*)",
      "Bash(head:*)",
      "Bash(wc:*)",
      "Bash(grep:*)",
      "Bash(find:*)",
      "Bash(done:*)",
      "Bash(tree:*)",
      "Bash(sort:*)",
      "Bash(echo:*)"
    ]
  },
  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "TTY=$(tmux display-message -p -t \"$TMUX_PANE\" '#{pane_tty}'); printf '\\a' > \"$TTY\"; afplay /System/Library/Sounds/Tink.aiff &"
          }
        ]
      }
    ]
  }
}
