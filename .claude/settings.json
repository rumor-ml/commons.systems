{
  "model": "opus",
  "sandbox": {
    "enabled": true,
    "autoAllowBashIfSandboxed": true,
    "excludedCommands": [
      "git", 
      "gh", 
      "gcloud", 
      "nix", 
      "go mod tidy"
    ]
  },
  "permissions": {
    "allow": [
      "WebSearch",
      "Skill(frontend-design:frontend-design)",
      "SlashCommand(/pr-review-toolkit:review-pr)",
      "SlashCommand(/commit-merge-push)",
      "Bash(git log:*)",
      "Bash(git ls-tree:*)",
      "Bash(git fetch:*)",
      "Bash(git pull:*)",
      "Bash(git rev-parse:*)",
      "Bash(git worktree list)",
      "Bash(git worktree add:*)",
      "Bash(git check-ignore:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(git merge:*)",
      "Bash(gh issue view:*)",
      "Bash(gh issue list:*)",
      "Bash(gh pr list:*)",
      "Bash(gh pr view:*)",
      "Bash(gh pr checks:*)",
      "Bash(gh api graphql:*)",
      "Bash(gh run list:*)",
      "Bash(gh run view:*)",
      "Bash(gh run watch:*)",
      "Bash(gh workflow list:*)",
      "Bash(nix flake check:*)",
      "Bash(tmux show-hooks:*)",
      "Bash(tmux show-options:*)",
      "Bash(tmux list-hooks:*)",
      "Bash(tmux show-hook:*)",
      "Bash(tmux list-panes:*)",
      "Bash(tmux list-windows:*)",
      "Bash(tmux capture-pane:*)",
      "Bash(tmux display-message:*)",
      "Bash(make build:*)",
      "Bash(make test:*)",
      "Bash(make test-e2e:*)",
      "Bash(make test-integration:*)",
      "Bash(make test-unit:*)",
      "Bash(go mod tidy:*)",
      "Bash(go doc:*)",
      "Bash(go list:*)",
      "Bash(go test:*)",
      "Bash(go build:*)",
      "Bash(go tool cover:*)",
      "Bash(templ generate:*)",
      "Bash(npx tsc:*)",
      "Bash(npx playwright test:*)",
      "Bash(npm test:*)",
      "Bash(gcloud logging read:*)",
      "Bash(gcloud run services describe:*)",
      "Bash(gcloud artifacts repositories list:*)",
      "Bash(gcloud artifacts docker images list:*)",
      "Bash(gcloud artifacts docker tags list:*)",
      "Bash(gcloud artifacts packages list:*)",
      "Bash(cat:*)",
      "Bash(head:*)",
      "Bash(wc:*)",
      "Bash(grep:*)",
      "Bash(ls:*)",
      "Bash(find:*)",
      "Bash(done:*)",
      "Bash(tree:*)",
      "Bash(tee:*)",
      "Bash(sort:*)",
      "Bash(echo:*)"
    ]
  },
  "hooks": {
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "echo \"[$(date +%s.%N)] STOP_START pane=$TMUX_PANE test=$CLAUDE_E2E_TEST\" >> /tmp/claude/hook-debug.log && [[ -n \"$TMUX_PANE\" ]] && [[ \"$TMUX_PANE\" =~ ^%[0-9]+$ ]] && touch \"/tmp/claude/tui-alert-$TMUX_PANE\" && echo \"[$(date +%s.%N)] STOP_SUCCESS pane=$TMUX_PANE file_created=yes\" >> /tmp/claude/hook-debug.log || echo \"[$(date +%s.%N)] STOP_FAILED pane=$TMUX_PANE code=$?\" >> /tmp/claude/hook-debug.log; [[ -z \"$CLAUDE_E2E_TEST\" ]] && afplay /System/Library/Sounds/Tink.aiff &"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "echo \"[$(date +%s.%N)] SUBMIT_START pane=$TMUX_PANE\" >> /tmp/claude/hook-debug.log && [[ -n \"$TMUX_PANE\" ]] && [[ \"$TMUX_PANE\" =~ ^%[0-9]+$ ]] && rm -f \"/tmp/claude/tui-alert-$TMUX_PANE\" && echo \"[$(date +%s.%N)] SUBMIT_SUCCESS pane=$TMUX_PANE file_removed=yes\" >> /tmp/claude/hook-debug.log || echo \"[$(date +%s.%N)] SUBMIT_FAILED pane=$TMUX_PANE code=$?\" >> /tmp/claude/hook-debug.log"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/sandbox-reminder.sh"
          },
          {
            "type": "command",
            "command": ".claude/hooks/pre-push-tests.sh"
          },
          {
            "type": "command",
            "command": ".claude/hooks/worktree-branch-guard.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "ExitPlanMode",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/exit-plan-mode-reminder.sh"
          }
        ]
      }
    ]
  }
}
