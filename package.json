{
  "name": "commons-systems-monorepo",
  "version": "1.0.0",
  "description": "Monorepo for commons.systems projects",
  "private": true,
  "type": "module",
  "workspaces": [
    "shared/design-system",
    "shared/auth",
    "shared/design-system",
    "fellspiral/site",
    "fellspiral/tests",
    "videobrowser/site",
    "videobrowser/tests",
    "audiobrowser/site",
    "audiobrowser/tests",
    "print/site",
    "print/tests",
    "printsync/tests"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=fellspiral/site",
    "build": "npm run build --workspace=fellspiral/site",
    "test": "npm test --workspace=fellspiral/tests",
    "test:deployed": "npm run test:deployed --workspace=fellspiral/tests",
    "preview": "npm run preview --workspace=fellspiral/site",
    "dev:videobrowser": "npm run dev --workspace=videobrowser/site",
    "build:videobrowser": "npm run build --workspace=videobrowser/site",
    "test:videobrowser": "npm test --workspace=videobrowser/tests",
    "test:videobrowser:deployed": "npm run test:deployed --workspace=videobrowser/tests",
    "preview:videobrowser": "npm run preview --workspace=videobrowser/site",
    "seed:firestore": "node fellspiral/scripts/seed-firestore.js",
    "dev:audiobrowser": "npm run dev --workspace=audiobrowser/site",
    "build:audiobrowser": "npm run build --workspace=audiobrowser/site",
    "test:audiobrowser": "npm test --workspace=audiobrowser/tests",
    "test:audiobrowser:deployed": "npm run test:deployed --workspace=audiobrowser/tests",
    "dev:print": "npm run dev --workspace=print/site",
    "build:print": "npm run build --workspace=print/site",
    "test:print": "npm test --workspace=print/tests",
    "test:print:deployed": "npm run test:deployed --workspace=print/tests",
    "dev:printsync": "cd printsync/site && make dev",
    "build:printsync": "cd printsync/site && make build",
    "test:printsync": "npm test --workspace=printsync/tests",
    "test:printsync:deployed": "npm run test:deployed --workspace=printsync/tests",
    "test:local": "./infrastructure/scripts/run-tests.sh",
    "test:local:firebase": "./infrastructure/scripts/run-tests.sh --type=firebase",
    "test:local:go": "./infrastructure/scripts/run-tests.sh --type=go-tui",
    "test:local:fellspiral": "./infrastructure/scripts/run-tests.sh fellspiral",
    "test:local-channel": "./infrastructure/scripts/deploy-and-test-local.sh",
    "test:local-channel:fellspiral": "./infrastructure/scripts/deploy-and-test-local.sh fellspiral",
    "test:local-channel:videobrowser": "./infrastructure/scripts/deploy-and-test-local.sh videobrowser",
    "test:local-channel:audiobrowser": "./infrastructure/scripts/deploy-and-test-local.sh audiobrowser",
    "test:local-channel:print": "./infrastructure/scripts/deploy-and-test-local.sh print"
  },
  "keywords": [
    "monorepo",
    "fellspiral",
    "tabletop",
    "rpg",
    "videobrowser",
    "gcs"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "firebase-admin": "^12.0.0",
    "firebase-tools": "^13.0.0",
    "typescript": "^5.3.0",
    "@types/node": "^20.0.0",
    "@playwright/test": "^1.40.0",
    "http-server": "^14.1.1"
  }
}
