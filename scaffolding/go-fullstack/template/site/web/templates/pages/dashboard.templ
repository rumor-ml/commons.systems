package pages

import "{{APP_NAME}}/web/templates/layouts"

type DashboardData struct {
	Title string
}

templ Dashboard(data DashboardData) {
	@layouts.Base("Dashboard") {
		@DashboardContent(data)
	}
}

templ DashboardContent(data DashboardData) {
	<main class="container mx-auto p-4">
		<h1 class="text-2xl font-bold mb-4">{ data.Title }</h1>

		<p class="mb-4">This is the dashboard page.</p>

		<nav>
			<a href="/" class="text-blue-600 hover:underline">Back to Home</a>
		</nav>
	</main>
}
