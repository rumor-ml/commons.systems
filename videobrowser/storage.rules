rules_version = '2';

// Firebase Storage Security Rules for Video Browser
// Bucket: rml-media
service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to videos, no write access
    match /video/{allPaths=**} {
      allow read: if true;  // Public read access for all videos
      allow write: if false; // No public writes - only admins via console/API
    }

    // Deny access to all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
